@{
}
<form asp-action="Create" asp-controller="Computer" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Name">Pc Name</label>
        <div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="Name" />
        <label asp-for="Cpu">Cpu</label>
        <div>
            <span asp-validation-for="Cpu" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="Cpu" />
        <label asp-for="Gpu">Gpu</label>
        <div>
            <span asp-validation-for="Gpu" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="Gpu" />
        <label asp-for="Manufacturer">Manufacturer</label>
        <div>
            <span asp-validation-for="Manufacturer" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="Manufacturer" />
        <div>
            <span asp-validation-for="ProductionDate" class="text-danger"></span>
        </div>
        <input class="form-control" type="date" asp-for="ProductionDate" />
        <div class="form-group">
            <select class="form-control" asp-for="OrganizationId" asp-items="@Model.Organizations"></select>
        </div>
    </div>
    <button type="submit">Dodaj</button>
</form>